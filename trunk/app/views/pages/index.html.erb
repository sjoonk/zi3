<%= page_title @title %>

<div id="summary_area">
	<div class="count float left">
	총 <%= @pages_count %>개의 페이지
	</div>
	<div class="float right">
		<%= button_link_to '새 페이지 작성', new_page_path %>
	</div>
	<div class="clear"></div>
</div>

<table>
<% @pages.each do |page| %>
<tr>
	<td><%= link_to page.title, page_path(page) %></td>
	<td><%= truncate(strip_tags_and_wiki(page.body), 20) %></td>
	<td><%= link_to page.user, user_path(page.user) %></td>
	<td><%= human_time(page.updated_at) %></td>
	<td><%= link_to image_tag('delete.gif'), page_path(page), :method => :delete, :confirm => 'Sure?' %>
</tr>
<% end %>
</table>

<div id="paginate">
<%= will_paginate @pages %>
</div >		