<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ko">
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  <title><%= 'Zi3 - ' + (@title || "Online Community for Creative Smalls") %></title>
	<link rel="stylesheet" href="/stylesheets/blueprint/screen.css" type="text/css" media="screen, projection"/>
	<link rel="stylesheet" href="/stylesheets/blueprint/print.css" type="text/css" media="print"/>    
	<!--[if IE]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"/><![endif]-->
  <% bundle do %>
	  <%= stylesheet_link_tag 'layout', 'button' %>
	  <%#= javascript_include_tag :defaults %>
	  <%= javascript_include_tag 'jquery-1.2.6.min', 'jquery-ui', 'jrails' %>
	  <%= javascript_include_tag 'jquery.form', 'jquery.livequery', 'jquery.validate' %>
		<%= javascript_include_tag 'jquery.autogrow', 'parseuri', 'jquery.corner' %>
		<%= javascript_include_tag 'nicEdit' %>
	<% end %>
	<%= yield :head -%>
	<%= javascript_tag "var AUTH_TOKEN='#{form_authenticity_token}';" if protect_against_forgery? %>
	<%= javascript_include_tag 'application' %>
	<%= yield :jquery_onload -%>
</head>

<body id="<%= controller.controller_name %>_page" class="page">
	<div class="container">
	  <div id="header" class="span-24">
			<%= render :partial => 'layouts/top_menu' -%>
			<h1 id="logo"><a href="/"><%= image_tag('zi3.gif', :alt => 'Zi3') %></a></h1>
	  </div>

	  <div id="main" class="span-24">
		  <div id="side_nav" class="span-5">
				<%= render :partial => 'layouts/side_nav' %>
				<%= yield :side %>
		  </div>
		  <div id="content" class="span-19 last">
		  	<% if flash[:notice] %>
					<div class="notice"><%= flash[:notice] %></div>
				<% end %>
		  	<% if flash[:error] %>
					<div class="error"><%= flash[:error] %></div>
				<% end %>
				
				<%= yield  %>
				
		  </div>
	  </div>

	  <div id="footer" class="span-24 right">
			&copy; <a href="<%= APP_CONFIG[:site_url] %>"><%= APP_CONFIG[:site_name] %></a>, 2007-2008. All right reserved.
		</div>	
	</div>
	<%#= javascript_tag "alert('#{flash[:error]}')" if flash[:error] %>
</body>
</html>

